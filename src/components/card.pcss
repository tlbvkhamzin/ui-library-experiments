@layer components {
    .card {
        @apply p-6 bg-white rounded-lg drop-shadow-md text-neutral-100;

        &-title {
            @apply font-medium leading-5 capitalize;
        }

        &-text {
            @apply mt-2 text-neutral-70 text-sm;
        }

        &-actions {
            @apply mt-10 flex justify-end;
        }
    }
}
